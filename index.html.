    <script>
        const vibes = {
            gm: [
                // Bullish Sentiment
                "GM. The charts look like a staircase to heaven today. WAGMI.",
                "GM. Everything is green. The simulation is healing.",
                // HODL Mentality
                "GM. Checked the portfolio, still not selling. Diamond hands only.",
                "GM. If you didn't sell the dip, you deserve this pump.",
                // Builder Mindset
                "GM. Less chart watching, more building. Let's ship something today.",
                "GM to everyone working on long-term value while the noise fades.",
                // Ignoring FUD
                "GM. High signal morning. Filter out the FUD and focus on the tech.",
                "GM. Another day, another block produced. Ignore the noise."
            ],
            gn: [
                // Hopium & Wealth
                "GN. Dreaming of 100k BTC and retirement. Sleep tight.",
                "GN. Manifesting financial freedom for the whole timeline.",
                // Comfort & Patience
                "GN. The floor is holding. We sleep well tonight.",
                "GN. Slow and steady wins the race. Patience pays.",
                // Community Solidarity
                "GN to the builders and the believers. See you at the top.",
                "GN. We're all gonna make it. Rest up, kings and queens.",
                // Chart Checking
                "GN. Checked the charts one last time. Pure hopium.",
                "GN. One last look at the candles before lights out. Green dreams only."
            ]
        };

        // Typewriter Effect Function
        function typeWriter(text, elementId) {
            const element = document.getElementById(elementId);
            element.innerHTML = ''; // Clear existing text
            element.classList.add('cursor'); // Ensure cursor is there
            
            let i = 0;
            const speed = 25; // Typing speed in ms

            function type() {
                if (i < text.length) {
                    element.innerHTML += text.charAt(i);
                    i++;
                    setTimeout(type, speed);
                }
            }
            type();
        }

        function generate(type) {
            const list = vibes[type];
            const randomVibe = list[Math.floor(Math.random() * list.length)];
            
            // Trigger typewriter effect
            typeWriter(randomVibe, 'output-text');
        }

        function copyText() {
            const text = document.getElementById('output-text').innerText;
            navigator.clipboard.writeText(text).then(() => {
                alert("Vibe copied to clipboard!");
            });
        }
    </script>
</body>
